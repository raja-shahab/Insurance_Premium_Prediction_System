# add base image
FROM python:3.11

# workdir
WORDIR /app

# copy requirements file
COPY requirements.txt .

# run command
RUN pip install --no-cache-dir -r requirements.txt

# copy rest application
COPY . .

# port
EXPOSE 8000

# command to start FastAPI app
CMD ['uvicorn', 'app:app', '--host', '0.0.0.0', '--port', '8000']